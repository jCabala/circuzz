{
  "experiment": {
    "enable_exit_on_failure": false,
    "enable_working_dir_cleanup": true,

    "prove_and_verify_tuning_strategy": "never",
    "prove_and_verify_tuning_percentage": 0
  },

  "mina": {
    "boundary_input_probability": 0.1,
    "test_iterations": 2
  },

  "ir": {
    "operators": {
      "relations": ["<", ">", "<=", ">=", "==", "!="],
      "boolean_unary_operators": ["!"],
      "boolean_binary_operators": ["&&", "||", "^^"],
      "arithmetic_unary_operators": ["-"],
      "arithmetic_binary_operators": ["+", "-", "*"],

      "is_arithmetic_ternary_supported": true,
      "is_boolean_ternary_supported": true
    },

    "generation": {
      "generator": "arithmetic",

      "constant_probability_weight": 1,
      "variable_probability_weight": 1,
      "unary_probability_weight": 1,
      "binary_probability_weight": 1,
      "relation_probability_weight": 1,
      "ternary_probability_weight": 1,

      "max_expression_depth": 4,
      "min_number_of_assertions": 0,
      "max_number_of_assertions": 2,
      "min_number_of_input_variables": 0,
      "max_number_of_input_variables": 2,
      "min_number_of_output_variables": 0,
      "max_number_of_output_variables": 2,

      "max_exponent_value": 4,
      "boundary_value_probability": 0.25
    },

    "rewrite": {
      "weakening_probability": 0,
      "min_rewrites": 1,
      "max_rewrites": 64,
      "rules": {
        "equivalence": [
          { "name": "comm-add", "match": "(?a + ?b)", "rewrite": "(?b + ?a)" },
          {
            "name": "assoc-add",
            "match": "((?a + ?b) + ?c)",
            "rewrite": "(?a + (?b + ?c))"
          },
          { "name": "comm-mul", "match": "(?a * ?b)", "rewrite": "(?b * ?a)" },
          {
            "name": "assoc-mul",
            "match": "((?a * ?b) * ?c)",
            "rewrite": "(?a * (?b * ?c))"
          },
          { "name": "add-zero", "match": "(?a + 0)", "rewrite": "?a" },
          { "name": "add-zero-rev", "match": "?a:int", "rewrite": "(?a + 0)" },
          { "name": "mul-one", "match": "(?a * 1)", "rewrite": "?a" },
          { "name": "mul-one-rev", "match": "?a:int", "rewrite": "(?a * 1)" },
          { "name": "mul-zero", "match": "(?a * 0)", "rewrite": "0" },
          { "name": "sub-self", "match": "(?a - ?a)", "rewrite": "0" },
          { "name": "sub-zero", "match": "(?a - 0)", "rewrite": "?a" },
          {
            "name": "distrib-mul-add",
            "match": "(?a * (?b + ?c))",
            "rewrite": "((?a * ?b) + (?a * ?c))"
          },
          { "name": "double-neg", "match": "(-(-?a))", "rewrite": "?a" },
          {
            "name": "neg-sub",
            "match": "(?a - ?b)",
            "rewrite": "(?a + (-?b))"
          },
          {
            "name": "neg-sub-rev",
            "match": "(?a + (-?b))",
            "rewrite": "(?a - ?b)"
          },
          {
            "name": "comm-and",
            "match": "(?a && ?b)",
            "rewrite": "(?b && ?a)"
          },
          { "name": "comm-or", "match": "(?a || ?b)", "rewrite": "(?b || ?a)" },
          {
            "name": "comm-xor",
            "match": "(?a ^^ ?b)",
            "rewrite": "(?b ^^ ?a)"
          },
          { "name": "double-not", "match": "(!(!?a))", "rewrite": "?a" },
          { "name": "and-true", "match": "(?a && T)", "rewrite": "?a" },
          { "name": "and-false", "match": "(?a && F)", "rewrite": "F" },
          { "name": "or-true", "match": "(?a || T)", "rewrite": "T" },
          { "name": "or-false", "match": "(?a || F)", "rewrite": "?a" },
          { "name": "xor-false", "match": "(?a ^^ F)", "rewrite": "?a" },
          { "name": "xor-self", "match": "(?a ^^ ?a)", "rewrite": "F" }
        ],
        "weakening": []
      }
    }
  }
}
